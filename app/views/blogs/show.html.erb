<ul> 
  <h1><%= @blog.title %></h1>
  <p><%= @blog.author %></p>
  <p><%= @blog.body %></p>
  <h1>Comments</h1>
  <% @comments.each do |comment| %>
  <h1><%= comment.name %></h1>
  <p><%= comment.opinion %></p>
  <% end %>
  <%= simple_form_for([@blog, @new_comment],html: { class: 'form-horizontal' }, remote: true) do |f| %>
  <%= f.input :name %>
  <%= f.input :opinion %>
  <%= f.button :submit %>
<% end %>
</ul>
